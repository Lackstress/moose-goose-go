#!/bin/bash

# Universal installer wrapper for Windows/Linux/macOS
# This script detects the OS and runs the Node.js installer

if [[ "$OSTYPE" == "msys" || "$OSTYPE" == "cygwin" || "$OSTYPE" == "win32" ]]; then
    # Windows
    node install.js %*
else
    # Linux, macOS, etc.
    node install.js "$@"
fi
